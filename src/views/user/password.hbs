<div class="mx-auto my-4 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
    <form id="formID" action="" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8">
        <h3 class="m-4">¿Cambiar la contraseña de: <br> <a href="" class="font-bold underline decoration-sky-500/40">{{usuario.nombre}}</a>?</h3>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                Nueva Contraseña
            </label>
            <input type="password" id="password" name="password" required
                   class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password_confirm">
                Confirmar Nueva Contraseña
            </label>
            <input type="password" id="password_confirm" name="password_confirm" required
                   class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Cambiar Contraseña
            </button>
        </div>
        <div id="error" class="text-red-500 text-xs italic mt-4"></div>
    </form>
</div>


<script>
document.getElementById('formID').addEventListener('submit', function(event) {
  var password = document.getElementById('password').value;
  var confirmPassword = document.getElementById('password_confirm').value;
  var errorDiv = document.getElementById('error');

  if (password !== confirmPassword) {
    errorDiv.textContent = 'Las contraseñas no coinciden'; // Mostrar el error en la página.
    event.preventDefault(); // Evitar que el formulario se envíe
  } else {
    errorDiv.textContent = ''; // Limpiar el mensaje de error si las contraseñas coinciden.
  }
});
</script>
