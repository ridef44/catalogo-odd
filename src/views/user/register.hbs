<div class="block mx-auto my-10 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
    <h1 class="text-2xl py-2 font-bold text-center">
        Formulario de Registro
    </h1>
    
    <form id="formID" action="" method="POST" class="mt-4 grid gap-4 place-items-center">

                        <div class="w-full">
                 <!-- En tu vista -->
                      <label class="block text-gray-700 text-sm font-bold mb-2" for="nombre">
                Rol
            </label>
                     <select name="id_role" class="bg-gray-100 border border-gray-200 w-full text-lg placeholder-gray-500 p-2 focus:bg-white shadow-m" required>
                        <option value="">Seleccione una rol</option>
                        {{#each roles}}
                            <option value="{{this.id}}">{{this.role}}</option>
                        {{/each}}
                        </select>
                </div>
   

        <div class="w-full">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="nombre">
                Nombre
            </label>
            <input
            oninvalid="this.setCustomValidity('Ingrese el campo')"
            oninput="setCustomValidity('')"
            class="bg-gray-100 border border-gray-200 w-full text-lg placeholder-gray-500 p-2 focus:bg-white shadow-md"
            type="text" name="nombre" placeholder="Nombre" id="nombre" required>
        </div>

        <div class="w-full">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="correo">
                Correo Electrónico
            </label>
            <input
            class="bg-gray-100 border border-gray-200 w-full text-lg placeholder-gray-500 p-2 focus:bg-white shadow-md"
            oninvalid="this.setCustomValidity('Ingrese un correo válido')"
            oninput="setCustomValidity('')"
            type="email" name="correo" placeholder="Correo" id="correo" required>
        </div>

        <div class="w-full">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                Contraseña
            </label>
            <input
            oninvalid="this.setCustomValidity('Ingrese el campo')"
            oninput="setCustomValidity('')"
            class="bg-gray-100 border border-gray-200 w-full text-lg placeholder-gray-500 p-2 focus:bg-white shadow-md"
            type="password" name="password" placeholder="Contraseña" id="password" required>
        </div>

        <div class="w-full">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password-confirm">
                Repetir Contraseña
            </label>
            <input
            oninvalid="this.setCustomValidity('Las contraseñas no coinciden')"
            oninput="setCustomValidity('')"
            class="bg-gray-100 border border-gray-200 w-full text-lg placeholder-gray-500 p-2 focus:bg-white shadow-md"
            type="password" placeholder="Repetir Contraseña" id="password-confirm" required>
        </div>

        {{#if error}}
        <p class="text-center text-red-500 text-sm">{{error}}</p>
        {{/if}}
        <button
            class="rounded-md bg-gray-700 w-60 text-lg text-white font-semibold p-2 my-3 hover:bg-gray-900 hover:text-yellow-500 focus:bg-green-900 shadow-lg"
        type="submit">
            <span>Ingresar</span>
            <i class="fas fa-arrow-right ml-2"></i>
        </button>
    </form>
</div>


<div class="fixed  hidden items-center justify-between z-10 bottom-0 right-0 mb-4 mr-4 bg-teal text-white py-2 px-4 rounded-md" id="notificacion">
    <span class="text-xl inline-block mr-5 align-middle">
      <i class="fas fa-check-circle"></i>
    </span>
    <span class="inline-block align-middle mr-8">
      <b class="capitalize">Usuario Agregado:</b>
    </span>
    <button onclick="this.parentElement.style.display='none'" class="text-2xl font-semibold leading-none right-0 top-0 mt-1 mr-4 outline-none focus:outline-none">×</button>
  </div>





<script>
document.getElementById('formID').addEventListener('submit', function(event) {
  var password = document.getElementById('password').value;
  var confirmPassword = document.getElementById('password-confirm').value;

  if (password !== confirmPassword) {
    document.getElementById('password-confirm').setCustomValidity('Las contraseñas no coinciden');
    event.preventDefault(); // Evitar que el formulario se envíe
  } else {
    document.getElementById('password-confirm').setCustomValidity(''); // Reiniciar la validación
  }
});
</script>


